    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server/index.js",
            "cwd": "${workspaceFolder}",
            "sourceMaps": true        },
            {
                "name": "Launch client",
                "type": "node",
                "request": "launch",
                "program": "${workspaceFolder}/client/src/server.js",
                "cwd": "${workspaceFolder}",
                "sourceMaps": true        },
            {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}"
        }
    ]
}